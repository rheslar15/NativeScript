<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Getting Started"/>
	</Page.actionBar>

    <StackLayout >
        <GridLayout rows="auto auto" columns="* *">
            <Label class="p-15" row="0" col="0" text="FPS" textWrap="true"/>
            <Label class="p-15" row="0" col="1" text="{{ fps }}"/>
            <Label class="p-15" row="1" col="0" text="minFPS" textWrap="true"/>
            <Label class="p-15" row="1" col="1" text="{{ minfps }}"/>
        </GridLayout>
        <Button class="btn btn-primary btn-active" text="{{ fpslabeltitle }}" tap="toogleMeter"/>
    </StackLayout>
</Page>