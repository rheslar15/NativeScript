<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="setTimeout"/>
	</Page.actionBar>
    <StackLayout class="layout" >
        <Label class="h4 m-15 text-center" text="Increase/Decrease number after 1 seconds" textWrap="true"/>
        <TextView class="h2 input m-15 text-center" text="{{ counter }}" editable="false"/>
        <GridLayout class="m-x-auto" rows="auto" columns="150 150">
            <Button class="btn btn-primary btn-rounded-sm btn-active" row="0" col="0" text="+" tap="increase"/>
            <Button class="btn btn-primary btn-rounded-sm btn-active" row="0" col="1" text="-" tap="decrease"/>
        </GridLayout>
    </StackLayout>
</Page>