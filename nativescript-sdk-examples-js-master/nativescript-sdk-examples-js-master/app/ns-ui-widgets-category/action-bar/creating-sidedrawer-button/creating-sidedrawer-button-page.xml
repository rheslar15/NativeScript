<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <!-- >> action-bar-sidedrawer-btn-xml -->
    <Page.actionBar>
		<ActionBar title="SideDrawer Button">
            <android>
                <NavigationButton icon="res://menu" tap="showSideDrawer" />
            </android>
            <ios>
                <ActionItem icon="res://menu" ios.position="left" tap="showSideDrawer" />
            </ios>
        </ActionBar>
	</Page.actionBar>
    <!-- << action-bar-sidedrawer-btn-xml -->

    <StackLayout verticalAlignment="middle"> 
        <Label text="{{ '&#xff05a; ' + title }}" textWrap="true" class="fa"/>
    </StackLayout>
</Page>