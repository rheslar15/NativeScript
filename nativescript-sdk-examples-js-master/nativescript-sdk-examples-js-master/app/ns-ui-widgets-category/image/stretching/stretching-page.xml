<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Stretch"/>
	</Page.actionBar>
    <GridLayout rows="*, *" columns="*, *">
        <StackLayout row="0" col="0">
            <Label text="none" textWrap="true" class="h2 text-center"/>
            <!-- >> image-stretch-none -->
            <Image src="~/images/logo.png" stretch="none" />
            <!-- << image-stretch-none -->
        </StackLayout>
        <StackLayout row="1" col="0">
            <Label text="fill" textWrap="true" class="h2 text-center"/>
            <!-- >> image-stretch-fill -->
            <Image src="~/images/logo.png" stretch="fill" />
            <!-- << image-stretch-fill -->
        </StackLayout>
        <StackLayout row="0" col="1">
            <Label text="aspectFill" textWrap="true" class="h2 text-center"/>
            <!-- >> image-stretch-aspect-fill -->
            <Image src="~/images/logo.png" stretch="aspectFill" />
            <!-- << image-stretch-aspect-fill -->
        </StackLayout>
        <StackLayout row="1" col="1">
            <Label text="aspectFit" textWrap="true" class="h2 text-center" />
            <!-- >> image-stretch-aspect-fit -->
            <Image src="~/images/logo.png" stretch="aspectFit" />
            <!-- << image-stretch-aspect-fit -->
        </StackLayout>
    </GridLayout>
</Page>