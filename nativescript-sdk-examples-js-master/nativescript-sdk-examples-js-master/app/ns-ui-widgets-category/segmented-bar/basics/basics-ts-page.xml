<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" loaded="onPageLoaded">
    <Page.actionBar>
		<ActionBar title="Getting Started"/>
	</Page.actionBar>
    <GridLayout rows="auto *" >
		<SegmentedBar row="0"  class="m-5" selectedIndex="{{ sbSelectedIndex }}">
			<SegmentedBar.items>
				<SegmentedBarItem title="Item 1" />
				<SegmentedBarItem title="Item 2" />
				<SegmentedBarItem title="Item 3" />
			</SegmentedBar.items>
		</SegmentedBar>
		<Label row="1" text="{{ 'Selected item with index: ' + prop }}" textWrap="true" verticalAlign="center" class="h2 p-15 text-center"/>
	</GridLayout>
</Page>