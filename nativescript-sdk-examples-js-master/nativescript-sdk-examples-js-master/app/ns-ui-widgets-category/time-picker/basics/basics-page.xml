<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Getting Started"/>
	</Page.actionBar>

    <GridLayout rows="50 50 *" columns="* *" class="m-20 p-10 text-center">
        <Label text="{{ hourResult }}" row="0" col="0" textWrap="true" />
        <Label text="{{ minuteResult }}" row="0" col="1" textWrap="true" />
        <Label text="{{ timeResult }}" row="1" col="0" colSpan="2" textWrap="true" />
        <!-- >> creating-timepicker-xml -->
        <TimePicker hour="10" minute="25"
                    loaded="onPickerLoaded" 
                    row="2" col="0" colSpan="2" 
                    class="m-15" verticalAlignment="center">
        </TimePicker>
        <!-- << creating-timepicker-xml -->
    </GridLayout>
</Page>